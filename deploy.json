{
  "name": "Frontier Firms LATAM Website",
  "description": "Website para fomentar la adopción de Frontier Firms en Latinoamérica con Microsoft",
  "version": "1.0.0",
  "author": "Frontier Firms LATAM Team",
  "homepage": "https://frontierfirms-latam.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/frontierfirms-latam/website"
  },
  "deployment": {
    "platforms": {
      "netlify": {
        "build_command": "echo 'No build required - static site'",
        "publish_directory": ".",
        "environment_variables": {
          "NODE_VERSION": "18"
        },
        "redirects": [
          {
            "from": "/casos-exito/*",
            "to": "/#casos-exito",
            "status": 301
          },
          {
            "from": "/roadmap/*",
            "to": "/#roadmap",
            "status": 301
          },
          {
            "from": "/soluciones/*",
            "to": "/#soluciones",
            "status": 301
          }
        ],
        "headers": [
          {
            "for": "/*",
            "values": {
              "X-Frame-Options": "DENY",
              "X-XSS-Protection": "1; mode=block",
              "X-Content-Type-Options": "nosniff",
              "Referrer-Policy": "strict-origin-when-cross-origin",
              "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com; connect-src 'self'"
            }
          }
        ]
      },
      "vercel": {
        "framework": null,
        "buildCommand": null,
        "outputDirectory": ".",
        "installCommand": null,
        "devCommand": "python -m http.server 3000"
      },
      "azure_static_web_apps": {
        "app_location": "/",
        "api_location": "",
        "output_location": "/",
        "skip_app_build": true
      },
      "github_pages": {
        "source": {
          "branch": "main",
          "path": "/"
        }
      }
    }
  },
  "seo": {
    "title": "Frontier Firms LATAM - Transformación Digital con Microsoft",
    "description": "Conviértete en una Frontier Firm en Latinoamérica. Lidera la transformación digital con IA, automatización y tecnologías Microsoft. Casos de éxito de Mercado Libre, Nubank, Rappi y más.",
    "keywords": [
      "Frontier Firms",
      "transformación digital",
      "Microsoft",
      "Latinoamérica",
      "inteligencia artificial",
      "automatización",
      "Azure",
      "Power Platform",
      "casos de éxito",
      "roadmap digital"
    ],
    "og_image": "https://frontierfirms-latam.com/assets/og-image.jpg",
    "twitter_card": "summary_large_image",
    "canonical_url": "https://frontierfirms-latam.com"
  },
  "analytics": {
    "google_analytics": "GA-XXXXXXXXX",
    "microsoft_clarity": "XXXXXXXXX",
    "hotjar": "XXXXXXX"
  },
  "integrations": {
    "crm": {
      "platform": "Microsoft Dynamics 365",
      "endpoint": "https://api.dynamics.com/leads",
      "api_key": "ENV_VAR_DYNAMICS_API_KEY"
    },
    "email_marketing": {
      "platform": "Microsoft Viva Engage",
      "list_id": "frontier-firms-leads"
    },
    "chatbot": {
      "platform": "Microsoft Bot Framework",
      "bot_id": "frontier-firms-bot"
    }
  },
  "performance": {
    "target_metrics": {
      "first_contentful_paint": "< 1.5s",
      "largest_contentful_paint": "< 2.5s",
      "cumulative_layout_shift": "< 0.1",
      "first_input_delay": "< 100ms",
      "lighthouse_score": "> 90"
    },
    "optimizations": {
      "image_compression": true,
      "css_minification": true,
      "js_minification": true,
      "lazy_loading": true,
      "cdn": "Azure CDN"
    }
  },
  "monitoring": {
    "uptime": {
      "service": "Azure Application Insights",
      "alerts": [
        {
          "condition": "availability < 99%",
          "notification": "team@frontierfirms-latam.com"
        }
      ]
    },
    "performance": {
      "service": "Azure Application Insights",
      "metrics": [
        "page_load_time",
        "user_interactions",
        "conversion_rate",
        "bounce_rate"
      ]
    }
  },
  "security": {
    "ssl": true,
    "hsts": true,
    "content_security_policy": true,
    "xss_protection": true,
    "clickjacking_protection": true
  },
  "backup": {
    "frequency": "daily",
    "retention": "30 days",
    "storage": "Azure Blob Storage"
  },
  "team": {
    "technical_lead": "dev@frontierfirms-latam.com",
    "content_manager": "content@frontierfirms-latam.com",
    "marketing_lead": "marketing@frontierfirms-latam.com",
    "business_owner": "info@frontierfirms-latam.com"
  },
  "maintenance": {
    "content_updates": "monthly",
    "security_patches": "as_needed",
    "performance_review": "quarterly",
    "analytics_review": "monthly"
  }
}